{
  "name": "@hyperpolymath/polyglot-db-mcp",
  "version": "1.3.0",
  "description": "Unified MCP server for multiple databases",
  "license": "MIT",
  "exports": "./server.js",
  "tasks": {
    "start": "deno run --allow-net --allow-read --allow-write --allow-env --unstable-kv server.js",
    "dev": "deno run --watch --allow-net --allow-read --allow-write --allow-env --unstable-kv server.js",
    "serve": "MCP_HTTP_MODE=true deno run --allow-net --allow-read --allow-write --allow-env --unstable-kv server.js",
    "serve:dev": "MCP_HTTP_MODE=true deno run --watch --allow-net --allow-read --allow-write --allow-env --unstable-kv server.js"
  },
  "imports": {
    "@modelcontextprotocol/sdk/server/mcp.js": "npm:@modelcontextprotocol/sdk@1.24.3/server/mcp.js",
    "@modelcontextprotocol/sdk/server/stdio.js": "npm:@modelcontextprotocol/sdk@1.24.3/server/stdio.js",
    "@modelcontextprotocol/sdk/": "npm:@modelcontextprotocol/sdk@1.24.3/",
    "surrealdb": "npm:surrealdb@1.0.0",
    "ioredis": "npm:ioredis@5.4.1",
    "mariadb": "npm:mariadb@3.4.0",
    "meilisearch": "npm:meilisearch@0.44.0",
    "@qdrant/js-client-rest": "npm:@qdrant/js-client-rest@1.12.0",
    "memjs": "npm:memjs@1.3.2",
    "arangojs": "npm:arangojs@10.1.2",
    "cassandra-driver": "npm:cassandra-driver@4.7.2"
  },
  "compilerOptions": {
    "lib": ["deno.window", "deno.unstable"]
  }
}
